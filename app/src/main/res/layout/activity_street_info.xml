<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.qianfeng.laosiji.miaote.ui.StreetInfoActivity">
    <android.support.v7.widget.Toolbar
        android:background="#ffcc00"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/view3">
        <ImageView
            android:onClick="onBack"
            android:id="@+id/find_shop_back_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/rc_bar_back"/>
        <TextView
            android:textSize="25sp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="喵街详情"/>
    </android.support.v7.widget.Toolbar>

<com.handmark.pulltorefresh.library.PullToRefreshListView
    android:id="@+id/street_info_prf"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/view3">

</com.handmark.pulltorefresh.library.PullToRefreshListView>
<RelativeLayout
    android:gravity="center_vertical"
    android:background="@drawable/plugin_camera_choose_back"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">
    <ImageView
        android:src="@drawable/btn_send1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
<EditText
    android:hint="评论："
    android:background="@drawable/edittext_line1"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />
</RelativeLayout>

</RelativeLayout>
