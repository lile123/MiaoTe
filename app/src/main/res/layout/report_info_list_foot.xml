<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
   <ImageView
       android:src="@drawable/other"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#11111111"/>
<LinearLayout
    android:visibility="invisible"
    android:id="@+id/report_info_type_info_ll"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/report_info_type_info_iv"
        android:scaleType="centerCrop"
        android:layout_margin="10dp"
        android:src="@mipmap/ic_launcher"
        android:layout_width="80dp"
        android:layout_height="100dp" />
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView

            android:textSize="25sp"
            android:text="23456789"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/report_info_type_info_name_tv"
            android:layout_above="@+id/report_info_type_info_time_tv"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="25dp" />
        <TextView
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/location_g"
            android:text="3460-"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="27dp"
            android:id="@+id/report_info_type_info_time_tv"/>
    </RelativeLayout>
</LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<ImageView
    android:layout_marginLeft="10dp"

    android:scaleX="0.6"
    android:layout_width="30dp"
    android:layout_height="40dp"
    android:src="@drawable/ex_tag"/>
        <ImageView
            android:src="@drawable/comment_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/report_comment_num_tv"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:text="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <com.qianfeng.laosiji.miaote.views.MyListView

        android:id="@+id/report_info_comment_lv"
       android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    </com.qianfeng.laosiji.miaote.views.MyListView>
<TextView
    android:gravity="center"
    android:text="查看全部评论"
    android:textSize="25sp"
    android:layout_width="match_parent"
    android:layout_height="50dp" />

</LinearLayout>