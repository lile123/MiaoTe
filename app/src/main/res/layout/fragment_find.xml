<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.qianfeng.laosiji.miaote.fragment.FindFragment">

    <!-- TODO: Update blank fragment layout -->
<android.support.v7.widget.Toolbar
    android:background="#ffcc00"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize">
    <LinearLayout
        android:layout_margin="10dp"
        android:id="@+id/find_tool_ll"
        android:orientation="horizontal"
       android:gravity="center"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:src="@drawable/exhibition_find"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="搜索漫展、喵街、喵记、用户"
              />
    </LinearLayout>
</android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<LinearLayout
    android:layout_marginTop="5dp"
    android:id="@+id/find_miaoji_ll"
    android:background="#ffffff"
    android:gravity="center_vertical"

    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="40dp">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/find_report"/>
    <TextView
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:text="喵记  Report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_marginLeft="200dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/go"/>
</LinearLayout>
    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/find_miaoji_iv"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@mipmap/ic_launcher"/>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:id="@+id/find_shop_ll"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/find_gift"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:text="商城  礼品兑换"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:scaleType="centerCrop"
            android:layout_marginLeft="200dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/go"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/find_rlv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/find_center_ll"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/find_task"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:text="任务中心"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginLeft="200dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/go"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/find_center_iv"
        android:src="@mipmap/ic_launcher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
    </ScrollView>
</LinearLayout>