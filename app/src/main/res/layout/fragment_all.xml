<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.qianfeng.laosiji.miaote.fragment.AttendFragment">


    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/city_data_ptrlv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </com.handmark.pulltorefresh.library.PullToRefreshListView>

    <RadioGroup
        android:id="@+id/rg_city_data_invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:alpha="1"
        >

        <RadioButton
            android:id="@+id/rb_invisible_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableRight="@drawable/selecter_trigon_img"
            android:gravity="center"
            android:layout_marginRight="35dp"
            android:text="类型"
            android:textSize="11sp"
             />

        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="#cccccc" />

        <RadioButton
            android:id="@+id/rb_invisible_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableRight="@drawable/selecter_trigon_img"
            android:gravity="center"
            android:layout_marginRight="35dp"
            android:text="时间"
            android:textSize="11sp"
             />

        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="#cccccc" />

        <RadioButton
            android:id="@+id/rb_invisible_state"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableRight="@drawable/selecter_trigon_img"
            android:gravity="center"
            android:layout_marginRight="35dp"
            android:text="状态"
            android:textSize="11sp"
             />

    </RadioGroup>
    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rg_city_data_invisible"
        android:background="#cccccc"/>

</RelativeLayout>






