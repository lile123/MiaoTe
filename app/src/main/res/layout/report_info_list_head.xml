<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:orientation="horizontal"
    android:id="@+id/report_info_head_rl"
    android:layout_width="match_parent"
    android:layout_height="140dp">
    <android.support.v7.widget.Toolbar
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:id="@+id/view4">

    </android.support.v7.widget.Toolbar>
<de.hdodenhof.circleimageview.CircleImageView

    android:layout_width="40dp"
    android:layout_height="40dp"
    android:src="@mipmap/ic_launcher"
    android:id="@+id/report_info_head_icon_civ"
    android:layout_marginLeft="21dp"
    android:layout_marginStart="21dp"
    android:layout_alignTop="@+id/report_info_head_name_tv"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />


    <TextView

        android:textSize="20sp"
        android:text="345678"
        android:id="@+id/report_info_head_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/view4"
        android:layout_toRightOf="@+id/report_info_head_icon_civ"
        android:layout_toEndOf="@+id/report_info_head_icon_civ" />

    <TextView
        android:text="签名："
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/report_info_head_tag_tv"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_alignLeft="@+id/report_info_head_name_tv"
        android:layout_alignStart="@+id/report_info_head_name_tv" />
    <ImageView
        android:src="@drawable/attention"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="37dp"
        android:layout_marginEnd="37dp"
        android:layout_below="@+id/report_info_head_name_tv"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="7dp"
        android:id="@+id/imageView3" />

</RelativeLayout>
<LinearLayout
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/report_info_head_title_tv"
        android:text="12345"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/report_info_head_num_tv"
        android:drawableLeft="@drawable/icon_repo_like_w"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="1234"
       android:textSize="15sp"
        android:background="@drawable/wordbg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
</LinearLayout>