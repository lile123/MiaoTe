<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.qianfeng.laosiji.miaote.ui.ReportInfoActivity">
    <com.qianfeng.laosiji.miaote.views.CustomListview
        android:id="@+id/report_info_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.qianfeng.laosiji.miaote.views.CustomListview>

    <com.qianfeng.laosiji.miaote.views.TransparentToolBar

        android:id="@+id/report_info_tb"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_marginLeft="19dp"
            android:onClick="onBack"
            android:id="@+id/report_info_back_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/rc_bar_back_w"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="19dp" />


        <TextView
            android:alpha="0.5"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report详情"
            android:id="@+id/textView"
            android:layout_alignTop="@+id/imageView4"
            android:layout_centerHorizontal="true" />
        <ImageView
            android:layout_marginRight="28dp"
            android:layout_gravity="end"
            android:src="@drawable/abc_ic_menu_share_mtrl_alpha_w"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView4"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="28dp" />

    </com.qianfeng.laosiji.miaote.views.TransparentToolBar>

    <LinearLayout
        android:id="@+id/report_info_share_ll"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="41dp"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

    <FrameLayout
        android:gravity="center"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:id="@+id/frameLayout">

        <View

            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/xml_oval_half_transparent_bg"/>

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/report_comment"

           />
    </FrameLayout>
    <FrameLayout
        android:gravity="center"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp">
        <View

            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/xml_oval_half_transparent_bg"/>

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/report_good"

            />
    </FrameLayout>
        <FrameLayout
            android:gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp">
            <View

                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/xml_oval_half_transparent_bg"/>

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:src="@drawable/report_collect"

                />
        </FrameLayout>
        <FrameLayout
            android:gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp">
            <View

                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/xml_oval_half_transparent_bg"/>

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:src="@drawable/icon_reportfood"

                />
        </FrameLayout>
    </LinearLayout>




</RelativeLayout>
