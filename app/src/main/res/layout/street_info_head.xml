<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/street_info_civ"
            android:src="@mipmap/ic_launcher"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <LinearLayout
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/street_info_name_tv"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="银铃"/>
            <TextView
                android:id="@+id/street_info_time_tv"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="07-14 00:13 "/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#11111111"/>

    <TextView
        android:gravity="center_vertical"
        android:id="@+id/street_info_content_tv"
        android:text="1234567890-"
        android:layout_width="match_parent"
        android:layout_height="60dp" />
    <ImageView
        android:src="@mipmap/ic_launcher"
        android:id="@+id/strret_info_photo_iv"
        android:layout_width="80dp"
        android:layout_height="80dp" />
    <com.qianfeng.laosiji.miaote.views.CustomGridView
        android:id="@+id/street_info_photo_gv"
        android:layout_width="match_parent"
        android:numColumns="4"
        android:layout_height="wrap_content">

    </com.qianfeng.laosiji.miaote.views.CustomGridView>
    <!--<com.qianfeng.laosiji.miaote.views.XCFlowLayout-->
        <!--android:id="@+id/street_info_xcf_ll"-->

        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content">-->

    <!--</com.qianfeng.laosiji.miaote.views.XCFlowLayout>-->

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#11111111"/>
    <RelativeLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >
        <TextView
            android:text="4"
            android:drawableLeft="@drawable/good"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/street_info_good_tv"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />



        <TextView

            android:drawableLeft="@drawable/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/street_share_tv"
            android:layout_marginLeft="26dp"
            android:layout_marginStart="26dp"
            android:layout_alignTop="@+id/street_info_good_tv"
            android:layout_toRightOf="@+id/street_info_good_tv"
            android:layout_toEndOf="@+id/street_info_good_tv" />



    </RelativeLayout>
    <LinearLayout

        android:id="@+id/steet_info_type_info_ll"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/street_info_type_info_iv"
            android:scaleType="centerCrop"
            android:layout_margin="10dp"
            android:src="@mipmap/ic_launcher"
            android:layout_width="80dp"
            android:layout_height="100dp" />
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView

                android:textSize="15sp"
                android:text="23456789"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/street_info_type_info_name_tv"
                android:layout_above="@+id/street_info_type_info_time_tv"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="25dp" />
            <TextView
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/location_g"
                android:text="3460-"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="27dp"
                android:id="@+id/street_info_type_info_location_tv"/>
            <TextView
                android:drawableLeft="@drawable/tiem"
                android:drawablePadding="5dp"
                android:id="@+id/street_info_type_info_time_tv"
                android:text="tyui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/street_info_type_info_location_tv"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="44dp"
                android:layout_marginEnd="44dp" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="10dp"
            android:scaleX="0.6"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:src="@drawable/ex_tag"/>
        <ImageView
            android:src="@drawable/comment_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/street_info_comment_num_tv"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:text="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>